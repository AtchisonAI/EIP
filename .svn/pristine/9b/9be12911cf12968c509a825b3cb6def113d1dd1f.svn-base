@using EIP.Common.Entities.Dtos
@using EIP.Web.DataUsers.Helpers

@{
    ViewBag.Title = "菜单按钮信息编辑";
    ViewBag.Require = "system-menubutton-edit";
    Layout = "~/Views/Shared/_LayoutPageEditSubmit.cshtml";
}
@model EIP.System.Models.Dtos.Permission.SystemMenuButtonOutput
@Html.EditTopRemark(new EditTopRemarkInput()
{
    Title = "菜单按钮信息",
    Remark = "注：带*号的为必填信息！"
})
<div class="edit-content">
    <table class="complex-table">
        <tbody>
            <tr>
                <th style="width: 100px">归属菜单：</th>
                <td>
                    @Html.TextBox("MenuName", @Model.MenuName, new { @readonly = true, @class = "text1", datatype = "*1-64", style = @"width: 85%; border-width: 1px 0px 1px 1px; " })
                    <input type="button" title="" id="chosen_menu" class="button_search" style="margin: 0; cursor: pointer;margin-left: -5px" value="选择" />
                </td>
            </tr>
            <tr>
                <th style="width: 110px" class="m">名称：</th>
                <td>
                    @Html.TextBoxFor(f => @Model.Name, new { datatype = "*1-64" })
                </td>
            </tr>
            <tr>
                <th>图标：</th>
                <td>
                    @Html.TextBox("Icon", @Model.Icon, new { datatype = "*1-32", ignore = "ignore", @readonly = true, @class = "text1", style = @"width:85%; border-width: 1px 0px 1px 1px; " })
                    <input type="button" title="" class="button_search" id="chosen_icon" style="margin: 0; cursor: pointer; margin-left: -5px" value="选择" />
                    <div class="l-icon l-icon-@Model.Icon" id="chosen_icon_show" style="margin: 5px 2px auto 0; float: right"></div>
                </td>
            </tr>
            <tr>
                <th class="m">方法：</th>
                <td>
                    @Html.TextBoxFor(f => @Model.Script, new { datatype = "*1-64" })
                </td>
            </tr>
            @*<tr>
                    <th>分割线：</th>
                    <td>
                       @Html.CheckBoxFor(f => @Model.Divider)
                    </td>
                </tr>*@
            <tr>
                <th class="m">排序号：</th>
                <td>
                    @Html.TextBoxFor(f => @Model.OrderNo, new { datatype = "n" })
                </td>
            </tr>
            <tr>
                <th valign="top">备注：</th>
                <td>
                    @Html.TextAreaFor(f => @Model.Remark, new { datatype = "*1-512", ignore = "ignore", style = "height: 40px" })
                </td>
            </tr>
        </tbody>
    </table>
</div>
@Html.HiddenFor(f => @Model.MenuId)
@Html.HiddenFor(f => @Model.MenuButtonId)