    <script>

        function getData(date) {
            var str = "";
            var week = date.getDay();
            if (week == 0) {
                str = "星期日";
            } else if (week == 1) {
                str = "星期一";
            } else if (week == 2) {
                str = "星期二";
            } else if (week == 3) {
                str = "星期三";
            } else if (week == 4) {
                str = "星期四";
            } else if (week == 5) {
                str = "星期五";
            } else if (week == 6) {
                str = "星期六";
            }
            return str;
        }

        function getCalendar() {
            $('#ca').calendar({
                width: 210,
                height: 200,
                onSelected: function (view, date, data) { }
            });
            $("#now_date").html(getData(new Date()));
        }

        //获取天气
        function getWeahter() {
            //http://www.heweather.com/documents/api
            $.ajax({
                url: "/Console/Main/GetWeather", // 跳转到地址
                type: "post",
                async: true, //开启异步模式
                dataType: "json",
                success: function (data) {
                    var date = new Date();
                    var weather = JSON.parse(data)["HeWeather data service 3.0"][0];
                    var now = weather.now;
                    //当前
                    $("#now_tmp")[0].innerHTML = now.tmp;
                    $("#now_cond_code").attr("src", "/Areas/Console/Contents/weather/" + now.cond.code + ".png");
                    $("#now_cond_code").attr("title", now.cond.txt);
                    //后一天
                    var other1 = weather.daily_forecast[1];
                    $("#other1_date").html(getData(new Date(date.valueOf() + 1 * 24 * 60 * 60 * 1000)));
                    $("#other1_cond_code").attr("src", "/Areas/Console/Contents/weather/" + other1.cond.code_n + ".png");
                    $("#other1_cond_code").attr("title", other1.cond.txt_n);
                    $("#other1_tmp").html(other1.tmp.max);
                    $("#other1_tmp1").html(other1.tmp.min);

                    //后两天
                    var other2 = weather.daily_forecast[2];
                    $("#other2_date").html(getData(new Date(date.valueOf() + 2 * 24 * 60 * 60 * 1000)));
                    $("#other2_cond_code").attr("src", "/Areas/Console/Contents/weather/" + other2.cond.code_n + ".png");
                    $("#other2_cond_code").attr("title", other2.cond.txt_n);
                    $("#other2_tmp").html(other2.tmp.max);
                    $("#other2_tmp1").html(other2.tmp.min);
                    //后三天
                    var other3 = weather.daily_forecast[3];
                    $("#other3_date").html(getData(new Date(date.valueOf() + 3 * 24 * 60 * 60 * 1000)));
                    $("#other3_cond_code").attr("src", "/Areas/Console/Contents/weather/" + other3.cond.code_n + ".png");
                    $("#other3_cond_code").attr("title", other3.cond.txt_n);
                    $("#other3_tmp").html(other3.tmp.max);
                    $("#other3_tmp1").html(other3.tmp.min);
                },
                error: function () { }
            });
        }

        //初始化html
        function initHtml() {
            var now = new Date(), hour = now.getHours(),info="";
            if (hour < 6) {
                info = "凌晨好";
            } else if (hour < 9) {
                info = "早上好";
            } else if (hour < 12) {
                info = "上午好";
            } else if (hour < 14) {
                info ="中午好";
            } else if (hour < 17) {
                info ="下午好";
            } else if (hour < 19) {
                info ="傍晚好";
            } else if (hour < 22) {
                info ="晚上好";
            } else {
                info = "夜里好";
            }
            $("#hour_info")[0].innerHTML = info;
        }
        getWeahter();

        getCalendar();

        initHtml();
