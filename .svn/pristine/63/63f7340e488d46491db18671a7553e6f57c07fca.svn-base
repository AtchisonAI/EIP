/*****************/
/** jNotify CSS **/
/*****************/
#jNotify {
	position:absolute;
	background:#fcf8e3  url('images/warning.png') no-repeat 15px center;
    -ms-background-size: 18px 18px;
    background-size: 18px 18px;
	color:#35517c;
	border:1px solid #fbeed5;
	padding:10px;
	padding-left:50px;
	margin:1px;
	z-index:9999;
	-moz-border-radius : 5px;
	border-radius:5px;
	-webkit-border-radius:5px;
}
#jNotify a {color:#35517c !important;text-decoration:none;}

